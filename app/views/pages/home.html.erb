<div class="container text-center pt-4 landing-general-style">
  <h1 class="py-4">Welcome to your new favorite app</h1>
    <div class="container chat-bot-card h-100">
      <div class="d-flex justify-content-start align-items-center">
        <%= link_to chatbots_path, class: "avatar-chat-bot me-3" do %>
        <%= image_tag "https://ik.imagekit.io/oc2ow6e7b/f3bb2be2649c409a247f0a6d866281e8bb44aae0_hq.jpg", class: "avatar-chat-bot", alt: "chat-bot" %>
        <% end %>
        <div class="d-flex flex-column align-items-start">
          <h2> Discute avec Light </h2>
          <p> Ton meilleur ami expert en manga est là pour t’inspirer </p>
        </div>
      </div>
    </div>

<div class="container w-100">
  <div class="row g-4 my-4">
    <% dbmangas = @dbmangas.sample(4) %>
    <% dbmangas.each do |manga| %>
      <div class="col-12 col-sm-6 col-md-6 col-lg-4">
        <%= link_to db_manga_path(manga), class: "text-decoration-none manga-card" do %>
          <div class="manga-card card h-100 shadow-sm p-2 d-flex flex-row align-items-start gap-3">

            <% if manga.image_url.present? %>
              <%= image_tag manga.image_url, class: "img-cover-fixed", alt: manga.title %>
            <% else %>
              <div class="manga-thumb d-flex align-items-center justify-content-center bg-light">
                <i class="fas fa-book fa-2x text-muted"></i>
              </div>
            <% end %>

            <div class="flex-grow-1">
              <div class="card-body p-0">
                <h5 class="card-title mb-1" title="<%= manga.title %>">
                  <%= manga.title %>
                </h5>
                <% if manga.genre.present? %>
                  <p class="text-muted small mb-0">
                    <i class="fas fa-tag me-1"></i><%= manga.genre %>
                  </p>
                <% end %>
              </div>
            </div>

          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



  <div class="container py-3">
    <%= link_to "Chercher un manga", db_mangas_path,
    class: "btn btn-red"%>
  </div>

  <div class="mb-5">
    <br>
    <br>
  </div>
</div>
