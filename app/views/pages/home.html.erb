<div class="container text-center mt-4">
  <p>Welcome to your new favorite app</p>
    <div class="chat-bot-card h-100">
      <div class="d-flex justify-content-start align-items-center">
        <a href="#" class="avatar-chat-bot me-3">
          <%= image_tag "https://ik.imagekit.io/oc2ow6e7b/f3bb2be2649c409a247f0a6d866281e8bb44aae0_hq.jpg", class: "avatar-chat-bot", alt: "chat-bot" %>
        </a>
        <div class="d-flex flex-column align-items-start">
          <h2> Discute avec Light </h2>
          <p> Ton meilleur ami expert en manga est là pour t’inspirer </p>
        </div>
      </div>
    </div>

    <div class="row g-4 my-4">
    <% dbmangas = @dbmangas.sample(4)%>
    <% dbmangas.each do |manga| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm manga-card">
          <!-- Image du manga (si disponible) -->
          <% if manga.image_url.present? %>
            <div class="card-img-top-wrapper">
              <%= image_tag manga.image_url, class: "card-img-top", alt: manga.title %>
            </div>
          <% else %>
            <div class="card-img-placeholder">
              <i class="fas fa-book fa-2x text-muted"></i>
            </div>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-truncate" title="<%= manga.title %>">
              <%= manga.title %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="container py-3">
    <%= link_to "Chercher un manga", db_mangas_path,
    class: "btn btn-red"%>
  </div>
</div>
