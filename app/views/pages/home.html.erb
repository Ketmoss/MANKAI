<div class="container text-center pt-4 landing-general-style">
  <h1 class="py-4">Welcome to your new favorite app</h1>
    <div class="chat-bot-card h-100">
      <div class="d-flex justify-content-start align-items-center">
        <a href="#" class="avatar-chat-bot me-3">
          <%= image_tag "https://ik.imagekit.io/oc2ow6e7b/f3bb2be2649c409a247f0a6d866281e8bb44aae0_hq.jpg", class: "avatar-chat-bot", alt: "chat-bot" %>
        </a>
        <div class="d-flex flex-column align-items-start">
          <h2> Discute avec Light </h2>
          <p> Ton meilleur ami expert en manga est là pour t’inspirer </p>
        </div>
      </div>
    </div>

    <div class="row g-4 my-4">
      <% dbmangas = @dbmangas.sample(4) %>
      <% dbmangas.each do |manga| %>
    <div class="col-12 col-sm-6 col-md-6 col-lg-4">
      <%= link_to db_manga_path(manga), class: "text-decoration-none manga-card" do%>
      <div class="card h-100 shadow-sm manga-card">
        <div class="row g-0">
          <!-- Image à gauche -->
          <div class="col-5">
            <% if manga.image_url.present? %>
              <%= image_tag manga.image_url, class: "style-image-card img-fluid rounded-start", alt: manga.title %>
            <% else %>
              <div class="d-flex align-items-center justify-content-center bg-light h-100">
                <i class="fas fa-book fa-2x text-muted"></i>
              </div>
            <% end %>
          </div>

          <!-- Contenu à droite -->
          <div class="col-6 ms-4">
            <div class="card-body d-flex flex-column h-100">
              <h5 class="card-title" title="<%= manga.title %>">
                <%= manga.title %>
              </h5>
               <% if manga.genre.present? %>
                <p class="text-muted small mb-2">
                  <i class="fas fa-tag"></i> <%= manga.genre %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>


  <div class="container py-3">
    <%= link_to "Chercher un manga", db_mangas_path,
    class: "btn btn-red"%>
  </div>
</div>
