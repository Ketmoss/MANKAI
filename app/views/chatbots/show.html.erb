<div class="container">
  <div class="messages mt-4 mb-5" data-controller="chatbot-scroll">
    <% @messages.each do |message| %>
      <div class="message mb-3 <%= message.role == "user" ? 'user-msg' : 'bot-msg' %>">
        <% if message.role == "user" %>
          <strong>
            <span class="text-orange me-2">
              <%= current_user.username.present? ? current_user.username : "Moi" %> :
            </span>
          </strong>
          <%= simple_format(message.content) %>
        <% else %>
          <div class="row align-items-center">
            <% if message.db_manga&.image_url.present? %>
              <!-- Passe la colonne à 4 parts sur 12, pour plus d’espace -->
              <div class="col-12 col-md-4 text-center mb-3 mb-md-0">
                <%= link_to db_manga_path(message.db_manga) do %>
                  <img src="<%= message.db_manga.image_url %>"
                       alt="<%= message.db_manga.title %>"
                       class="manga-bot-img img-fluid w-100 rounded shadow">
                <% end %>
              </div>
            <% end %>
            <div class="<%= message.db_manga&.image_url.present? ? 'col-12 col-md-8' : 'col-12' %>">
              <%= simple_format(message.content, {}, sanitize: false) %>
              <% if message.db_manga %>
                <p class="mt-2">
                  <%= link_to "Échanger ou ajouter « #{message.db_manga.title} » à ma liste",
                              db_manga_path(message.db_manga),
                              class: "text-decoration-none text-primary" %>
                </p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <div data-chatbot-scroll-target="end"></div>
  </div>
</div>



  <div class="container">
    <%= form_with(model: [@chatbot, @messagebot], local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :content, "Ta question :", class: "form-label" %>
        <%= form.text_area :content, rows: 3, class: "form-control", placeholder: "Pose ta question..." %>
      </div>

      <%= form.submit "Envoyer", class: "btn btn-manga-primary" %>
    <% end %>
  </div>
