<div class="container">
<h2>Choisir un manga à recevoir en retour</h2>

<p><strong>Manga que vous possédez :</strong> <%= @exchange.wanted_manga.db_manga.title %></p>
<p><strong>Message de <%= @exchange.initiator.username %> :</strong> <%= @exchange.initial_message %></p>

<%= form_with model: @exchange, url: exchange_path(@exchange), method: :patch, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :offered_manga_id, "Quel manga souhaitez-vous recevoir de #{ @exchange.initiator.username } ?" %>
    <%= form.collection_select :offered_manga_id, @available_mangas, :id, ->(m) { m.db_manga.title }, prompt: "Choisir un manga", class: "w-full border rounded p-2" %>
  </div>

  <%= form.submit "Soumettre l'échange retour", class: "btn btn-success" %>
<% end %>

<%= link_to "retour", :back %>
</div>
