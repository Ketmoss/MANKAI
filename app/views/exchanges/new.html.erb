<div class="general-style">
  <div class="container py-5">
    <h2 class="text-center py-4">Nouvelle demande d’échange</h2>
      <div class="d-flex justify-content-center">
        <div class="col-md-8">

<%= form_with model: @exchange, url: exchanges_path, local: true do |form| %>
  <%= form.hidden_field :wanted_manga_id, value: @wanted_manga.id %>

  <div class="mb-3">
    <%= form.label :initial_message, "Message à l'utilisateur" %><br>
    <%= form.text_area :initial_message, rows: 4, class: "w-full border rounded p-2" %>
  </div>

  <%= form.submit "Envoyer la demande", class: "btn btn-primary" %>
<% end %>
      </div>
    </div>
  </div>
</div>
