<div class="simple-calendar">
  <div class="calendar-heading">
    <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title">
      <%= t('date.month_names')[start_date.month] %> <%= start_date.year %>
    </time>

    <nav>
      <%= link_to t('simple_calendar.previous', default: 'Previous'), "#{calendar.url_for_previous_view}#calendar-anchor" %>
      <%= link_to t('simple_calendar.today', default: 'Today'), "#{calendar.url_for_today_view}#calendar-anchor" %>
      <%= link_to t('simple_calendar.next', default: 'Next'), "#{calendar.url_for_next_view}#calendar-anchor" %>
    </nav>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <td class="<%= calendar.td_classes_for(day) %>">
              <div class="day_number"><%= day.day %></div>

              <% calendar.sorted_events_for(day).each do |event| %>
                <div class="exchange-event">
                  <small>
                    <%= link_to exchange_path(event), class: "text-decoration-none" do %>
                      üìö <%= truncate(event.wanted_manga.db_manga.title, length: 15) %>
                      <% if event.offered_manga %>
                        ‚ÜîÔ∏è <%= truncate(event.offered_manga.db_manga.title, length: 15) %>
                      <% end %>
                    <% end %>
                  </small>
                </div>
                <%= capture(event, &passed_block) if passed_block %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
