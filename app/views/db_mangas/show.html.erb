<div class="add-to-collection-section">
  <% if user_signed_in? %>
    <% if current_user.user_collections.any? %>
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
          Ajouter à une collection
        </button>
        <ul class="dropdown-menu">
          <% current_user.user_collections.each do |collection| %>
            <li>
              <%= form_with url: user_collection_owned_mangas_path(collection),
                            method: :post,
                            class: "dropdown-item p-0" do |f| %>
                <%= hidden_field_tag :db_manga_id, @db_manga.id %>
                <%= f.submit collection.name, class: "dropdown-item text-start border-0 bg-transparent w-100" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <p class="text-muted">
        <%= link_to "Créez une collection", new_user_collection_path %>
        pour ajouter des mangas
      </p>
    <% end %>
  <% else %>
    <%= link_to "Connectez-vous pour ajouter", new_user_session_path,
                class: "btn btn-secondary" %>
  <% end %>
