
<div class="container pt-5 general-style">
  <div class="row">
    <!-- Colonne image -->
    <div class="col-md-5 d-flex justify-content-center">
      <img src="<%= @dbmanga.image_url %>" alt="<%= @dbmanga.title %>" class="img-fluid rounded-lg py-3">
    </div>

    <div class="col-md-7">
      <h1 class="text-center"><%= @dbmanga.title%></h1>
      <div class="card mx-4">
        <p><strong>Title:</strong> <%= @dbmanga.title %></p>
        <p><strong>Author:</strong> <%= @dbmanga.author %></p>
        <p><strong>Genre:</strong> <%= @dbmanga.genre %></p>
        <p><strong>Status:</strong> <%= @dbmanga.status %></p>
        <p><strong>Chapters:</strong> <%= @dbmanga.chapter %></p>
        <p><strong>Volumes:</strong> <%= @dbmanga.volume %></p>
      </div>
    <div class="container text-center py-3">
      <%# Attention ici il faut changer la route pour le link-to "je le veux" %>
      <%= link_to db_mangas_path, class: "btn btn-red" do%>
      <i class="fas fa-bookmark"></i>
      <span>Je le veux</span>
      <%= link_to db_mangas_path, class: "btn btn-red ms-4" do%>
      <i class="fas fa-chevron-left"></i>
      <span>Back to mangas</span>
        <% end %>
        <% end %>
    </div>
    <div class="card mx-4 mb-4">
      <h4><strong>Synopsis</strong></h4>
      <p><%= @dbmanga.synopsis %></p>
    </div>
    <div class="card mx-4 mb-4">
      <h4><strong>Avis</strong></h4>
      <ul class="list-group list-group-flush">
        <% @dbmanga.reviews.each do |review| %>
        <li class="bg-color-surface list-group-item  d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold"><%= review.user.username%></div>
            <p><%= review.content %></p>
          </div>
          <span><i class="fas fa-star"></i> <%= review.score %></span>
        </li>
        <% end %>
      </ul>
    </div>
    </div>
  </div>
</div>
