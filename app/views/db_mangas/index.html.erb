
<div class="container background-grey">
  <h1 class="text-center pt-5">Tous les mangas</h1>

  <%= link_to "back to home", root_path, class: "btn btn-magic text-center my-3" %>
  <hr>

  <!-- Grid container pour les cards -->
  <div class="row g-4 my-4">
    <% @dbmangas.each do |manga| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm manga-card">
          <!-- Image du manga (si disponible) -->
          <% if manga.image_url.present? %>
            <div class="card-img-top-wrapper">
              <%= image_tag manga.image_url, class: "card-img-top", alt: manga.title %>
            </div>
          <% else %>
            <div class="card-img-placeholder">
              <i class="fas fa-book fa-2x text-muted"></i>
            </div>
          <% end %>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-truncate" title="<%= manga.title %>">
              <%= manga.title %>
            </h5>

            <!-- Informations supplémentaires si disponibles -->
            <% if manga.author.present? %>
              <p class="card-text text-muted small mb-1">
                <i class="fas fa-user"></i> <%= manga.author %>
              </p>
            <% end %>

            <% if manga.genre.present? %>
              <p class="card-text text-muted small mb-2">
                <i class="fas fa-tag"></i> <%= manga.genre %>
              </p>
            <% end %>

            <% if manga.synopsis.present? %>
              <p class="card-text flex-grow-1">
                <%= truncate(manga.synopsis, length: 60) %>
              </p>
            <% end %>

            <!-- Bouton en bas de la card -->
            <div class="mt-auto">
              <%= link_to "Voir détails", db_manga_path(manga),
                  class: "btn btn-primary btn-sm w-100" %>
            </div>
          </div>

          <!-- Badge ou statut si disponible -->
          <% if manga.status.present? %>
            <div class="card-footer bg-transparent border-0 py-2">
              <span class="badge bg-secondary">
                <%= manga.status %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>


<style>
  .manga-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border: none;
    border-radius: 12px;
    overflow: hidden;
  }

  .manga-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
  }

  .card-img-top-wrapper {
    height: 120px;
    overflow: hidden;
    background: #f8f9fa;
  }

  .card-img-top {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .manga-card:hover .card-img-top {
    transform: scale(1.05);
  }

  .card-img-placeholder {
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  }

  .card-img-placeholder i {
    font-size: 2rem !important;
  }

  .card-title {
    color: #2c3e50;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .card-text {
    font-size: 0.8rem;
    line-height: 1.3;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 6px;
    font-weight: 500;
    padding: 6px 12px;
    font-size: 0.85rem;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
    transform: translateY(-1px);
  }

  @media (max-width: 576px) {
    .col-12 {
      margin-bottom: 1rem;
    }
  }
</style>
