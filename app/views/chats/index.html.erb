<!-- app/views/chats/index.html.erb -->
<h1>Chats for exchange n.<%= @exchange.id %></h1>

<div class="mb-4">
  <% if @chats.any? %>
    <ul>
      <% @chats.each do |chat| %>
        <li><%= link_to chat.title, chat_path(chat) %></li>
      <% end %>
    </ul>
  <% else %>
    There are no chats yet.
  <% end %>
</div>

<%= simple_form_for [@exchange, @chat] do |f| %>
  <%= f.button :submit, "New chat", class: "btn btn-primary" %>
<% end %>
